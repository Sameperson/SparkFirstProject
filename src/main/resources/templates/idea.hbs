{{#partial "content"}}
    <h1>{{idea.title}}</h1>
    <h2>{{idea.voteCount}} voters</h2>
    <ul>
        {{#each idea.voters}}
            {{this}}
        {{/each}}
    </ul>

    <form action="/ideas/{{idea.slug}}/vote" method="post">
        <button>Vote</button>
    </form>
{{/partial}}

{{#partial "title"}}
    {{idea.title}}
{{/partial}}
{{> base.hbs}}